<Window x:Class="PL.New_order.UpdateAmount"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:PL.New_order"
        mc:Ignorable="d"
        Title="Update Amount" Height="250" Width="230">
    <Grid>
        <Grid Margin="0,39,0,0">
            <TextBox x:Name="AmountToUpdate" HorizontalAlignment="Center" Margin="0,30,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="98" />
            <Button Content="Confirm" HorizontalAlignment="Center" Margin="0,65,0,0" VerticalAlignment="Top" Width="71" Click="Button_Click"/>
        </Grid>
        <Label Content="Enter the amount you wish to order" HorizontalAlignment="Left" Margin="10,10,0,0" VerticalAlignment="Top" Width="190" Height="35" FontSize="11"/>


    </Grid>
</Window>
