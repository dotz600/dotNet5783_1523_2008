<Window x:Class="PL.StartSimulatorWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:PL"
        mc:Ignorable="d"
        Title="StartSimulatorWindow" Height="450" Width="800">
    <Grid>
        <Grid.ColumnDefinitions>

            <ColumnDefinition Width="405*"/>
            <ColumnDefinition Width="391*"/>
            <ColumnDefinition Width="4*"/>

        </Grid.ColumnDefinitions>


        <TextBlock x:Name="timerTextBlock"  Text="00:00:00" FontSize="96" TextAlignment="Justify" 
                  Margin="32,0,11,330" Foreground="#FF37F10E" Grid.Column="1" TextWrapping="WrapWithOverflow" />

        <StackPanel Margin="374,-77,-26,82" Grid.ColumnSpan="3">
            <Button x:Name="stopTimerButton" Content="Stop" Width="138" Height="60" 
                Margin="125,274,125,100" FontSize="42" Click="stopTimerButton_Click"/>


        </StackPanel>



    </Grid>
</Window>
